<catel:DataWindow x:Class="Catel.Examples.WPF.MasterDetail.Views.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				  xmlns:catel="http://catel.codeplex.com"
                  xmlns:Views="clr-namespace:Catel.Examples.WPF.MasterDetail.Views"
                  ShowInTaskbar="True" ResizeMode="CanResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Label Grid.Row="0">
            <TextBlock TextWrapping="Wrap">
                This demo shows how to implement a master/detail scenario using Catel.
            </TextBlock>
        </Label>

        <Views:PersonMasterView Grid.Row="1" />
    </Grid>
    
</catel:DataWindow>
